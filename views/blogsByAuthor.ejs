<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <nav>
      <div class="back"><a href="/app/v1/user/dashboard">Home</a></div>
      <ul>
        <li><a href="/app/v1/user/logout">Logout</a></li>
      </ul>
    </nav>
    <main>
      <div class="blogs">
        <% blogs.forEach(blog=>{%>
        <a href="/app/v1/blogs/author/<%= blog._id%>">
          <div class="blog">
            <h2 class="blog-title"><%= blog.title%></h2>
            <p><%= blog.snippet%></p>
            <p><%= blog.price%></p>
          </div>
        </a>
        <%})%>
      </div>
    </main>
  </body>
</html>
